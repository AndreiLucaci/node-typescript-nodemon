{
  "name": "node-typescript-nodemon",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:AndreiLucaci/node-typescript-nodemon.git",
  "author": "Andrei Lucaci <lucaciandrei@outlook.com>",
  "license": "MIT",
  "scripts": {
    "build": "rimraf ./build && tsc",
    "start": "nodemon",
    "start:prod": "npm run build && node build/index.js",
    "lint": "eslint 'src/**'",
    "type:check": "tsc --noEmit",
    "tsc-watch": "tsc -w",
    "run": "tsc run",
    "lint-git": "LIST=`git diff-index --name-only --diff-filter=d HEAD | grep .*\\.ts | grep -v json`; if [ \"$LIST\" ]; then eslint -c .eslintrc.js $LIST; fi"
  },
  "dependencies": {
    "cross-env": "^6.0.3",
    "lodash": "^4.17.21",
    "ts-loader": "^8.0.15"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/node": "^16.4.3",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.168",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-unused-imports": "^1.1.1",
    "husky": "^3.1.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "ts-jest": "^26.5.3",
    "nodemon": "^2.0.12",
    "rimraf": "^3.0.2",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run lint-git",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
