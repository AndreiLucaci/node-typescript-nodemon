{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ES2021", "dom"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "typings", "build"]
}
